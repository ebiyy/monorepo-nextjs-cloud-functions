{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Cloud Functions",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "functions"
  ],
  "exclude": ["node_modules"]
}
